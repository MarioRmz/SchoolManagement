@model IEnumerable<SchoolManagement.Models.Enrollment>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
@if (Model.Count() < 1)
{
    <h1 class="text-center text-info">NO HAY ENROLAMIENTOS EN ESTE CURSO</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Title)
            </th>
            <th>
                Estudiante
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Student.LastName)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Lecturer.FirstName)
                </th>*@
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName) @Html.DisplayFor(modelItem => item.Student.LastName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Student.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lecturer.FirstName)
                    </td>*@
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.EnrollmentID }) |
                        @Html.ActionLink("Details", "Details", new { id=item.EnrollmentID }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
                </td>
            </tr>
        }

    </table>

}
